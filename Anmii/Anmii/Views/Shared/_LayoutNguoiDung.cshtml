@{
    Layout = null;
    string type = "";
}
@model Anmii.Models.ViewModels
<!DOCTYPE html>

<html>
<head>
    <meta name='viewport' content='width=device-width, initial-scale=1'>

    <title>Anmii</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <link href="~/Content/StyleHomePage.css" rel="stylesheet" />
    <link rel='stylesheet' type='text/css' href='/Icons/css/all.css'>
    @RenderSection("Scripts", required: false)


</head>
<body style="padding: 0px">
    <header>
        <div id="time" class="bg-warning">
            <p>Giờ mờ cửa từ 7:00 đến 22:00 hàng ngày</p>
        </div>
        <!-- *************************************************************** -->
        <div class="row" style="background-color:lightyellow">
            <div class="col-lg-12">
                <center>
                    <div class="col-lg-6 m-3">
                        <a class="navbar-brand zoom" href="Index">
                            <img class="rounded-circle" style="width:10vw" id="logo" alt="logoAnmii" src="~/Images/logo.png">
                        </a>
                    </div>

                </center>
            </div>
            <div class="col-lg-12">
                <center>
                    <div class="col-lg-6 m-3">
                        @using (Html.BeginForm("TimKiem", "MON_AN_NguoiDung", FormMethod.Get))
                        {
                            <div class="input-group">
                                <input type="text" class=" margin-right form-control" size="50" placeholder="Tìm kiếm món ăn tại đây..." name="param" >
                                <div class="input-group-input-group-append">
                                    <button class="btn bg-warning"><span class="fas fa-search"></span></button>
                                </div>
                            </div>
                        }
                    </div>
                </center>
            </div>
        </div>
        <!-- *************************************************************** -->
        <nav class="navbar navbar-expand-md bg-warning navbar-dark d-flex">

            <button class="navbar-toggler float-left" data-toggle="collapse" data-target="#Menu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse  justify-content-between w-100" id="Menu">
                <ul class="navbar-nav">

                    <li class="nav-item"><a style="color:white;" class="nav-link" href="Index">TRANG CHỦ</a></li>
                    <li class="nav-item"><a style="color:white" class="nav-link" href="../ChiTiet/GioiThieu">GIỚI THIỆU</a></li>
                    <li class="nav-item dropdown">
                        <a style="color:white" class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" href="#">SẢN PHẨM</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item text-warning" href="~/MON_AN_NguoiDung/IndexDoAn">Đồ ăn</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-warning" href="~/MON_AN_NguoiDung/IndexDoUong">Đồ uống</a>

                        </div>
                    </li>
                    <li class="nav-item"><a style="color:white" class="nav-link" href="../ChiTiet/LienHe">LIÊN HỆ</a></li>
                </ul>
                <div class="d-flex justify-content-end ">
                    <a href="~/GioHang/GioHang" style="color:black; font-size:25px">
                        <p class="fa fa-shopping-cart"></p>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div style="background-color: lightgoldenrodyellow; padding:2px">
        <div class="container" style="margin-top: 20px">
            <div class="form-inline" style="margin: 5px">
                <label><i>Bộ lọc: </i></label>
                @foreach (var item in Model.LoaiMonAN)
                {
                    <a>
                        @{ type = item.MALOAIMONAN.ToString(); }
                        @Html.ActionLink(item.TENLOAI, "IndexType",
                        new { Type = type }, new { @class = "btn" })
                    </a>
                }
            </div>
        </div>
    </div>
    <div class=" bg-light">
        @RenderBody()
    </div>
    <div class="container">
        <div id="mycarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Images/crs1.jpg" style="height:400px; width:100vw" hr>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/crs2.JPG" style="height:400px; width:100vw">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/crs4.JPG" style="height:400px; width:100vw">
                </div>
            </div>
            <!--nút điều khiến slide-->
            <a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev"> <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span></a>
            <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next"> <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span> </a>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-lg-4 ">

                <div class="image-19">
                    <img class="ui fluid image" src="https://quickfood.weba.vn/shop/images/quickfood/hinhanh/1.png" alt="CHUYỂN PHÁT NHANH">
                </div>
            <div class="wm-module wm-free-text tt-auto">
                <h2 class="ui header">GIAO HÀNG NHANH</h2>
                <div class="content">
                    <p><span style="font-size: 12pt;"><span>Mọi thứ bạn đặt hàng tại Anmii sẽ nhanh chóng được gửi đến nhà bạn.</span></span></p>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
                    <div class="image-77">
                        <img class="ui fluid image" src="https://quickfood.weba.vn/shop/images/quickfood/hinhanh/2.png" alt="THỨC ĂN SẠCH">
                    </div>
                <div class="wm-module wm-free-text tt-auto">
                    <h2 class="ui header">THỨC ĂN SẠCH</h2>
                    <div class="content">
                        <p><span>Chúng tôi chỉ sử dụng các thành phần tốt nhất để nấu món ăn tươi ngon cho bạn.</span></p>
                    </div>
                </div>
            </div>

    <div class="col-lg-4">

                    <div class="image-66">
                        <img class="ui fluid image" src="https://quickfood.weba.vn/shop/images/quickfood/hinhanh/4.png" alt="MỘT LOẠT CÁC MÓN ĂN">
                    </div>
                <div class="wm-module wm-free-text tt-auto">
                    <h2 class="ui header">THỰC ĐƠN PHONG PHÚ</h2>
                    <div class="content">
                        <p><span style="font-size: 12pt;"><span>Trong thực đơn của chúng tôi, bạn sẽ tìm thấy rất nhiều món ăn và đồ uống.</span></span></p>
                    </div>
                </div>
            </div>
        </div>
    <footer class="bg-warning p-5">
        <div id="footer" class="row">
            <div class="col-lg-5 col-md-12">
                <b>CỬA HÀNG ANMII</b><br />Số 59 nguyễn đình chiểu Thành phố Nha Trang, Khánh Hòa
                <br />Số 46 nguyễn đình chiểu Thành phố Nha Trang, Khánh Hòa<br />
                Hotline: 0979.086.069- 0829.499.778<br />
                Email: <a style="color: black" href="#">anmiishop@gmail.com</a><br />
                Trang web: <a style="color: black" href="#">anmii.com</a><br />
            </div>
            <div class="col-lg-3 col-md-12">
                <b>HỖ TRỢ KHÁCH HÀNG</b>
                <ul style="list-style-type:none ">
                    <li><a style="color: black" href="~/Login/Login">Đăng Nhập</a></li>
                    <li><a style="color: black" href="#">Điều Khoản Sử Dụng</a></li>
                    <li><a style="color: black" href="#">Chính Sách thanh Toán</a></li>
