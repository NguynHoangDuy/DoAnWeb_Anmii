@model IEnumerable<Anmii.Models.LIENHE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "MALIENHE", rowsPerPage: 2);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Danh sách liên hệ</title>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: whitesmoke;
        }

        thead {
            background-color: darkseagreen;
        }

        a {
            color: black
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }

        #gridContent {
            margin-left: 8px;
            margin-right: 8px;
            width: auto;
        }
    </style>
</head>
<body>

    <h1 style="text-align:center">DANH SÁCH LIÊN HỆ</h1>
    <div id="gridContent" style="color: black;">
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
            grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
            grid.Column("MALIENHE","Mã liên hệ"),
            grid.Column("HOTEN","Họ tên"),
            grid.Column("SDT","Số điện thoại"),
            grid.Column("EMAIL","Email"),
            grid.Column("TIEUDE","Tiêu đề"),
            grid.Column("Chức năng", format: @<text>
    
    <a href="@Url.Action("Details", new { id = item.MALIENHE})" class="edit-btn"><abbr title="Xem chi tiết"><img src="~/Images/details.png" width="20" height="20" style="margin-left: 3px;" /></abbr></a>&nbsp;|
    
            </text>),

}
)
    </div>
</body>
</html>