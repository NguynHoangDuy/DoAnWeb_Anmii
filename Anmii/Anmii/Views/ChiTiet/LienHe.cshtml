
@{
    ViewBag.Title = "LienHe";
    Layout = "~/Views/Shared/_LayoutGioHang.cshtml";
}

<div>
    <div class="container p-5">
        <div class="row m-5">
            <div class="col-12 mb-3">
                <h5 class="font-weight-bold">LIÊN HỆ</h5>
            </div>
            <div class="col-12">
                <div class="row ">
                    <div class="col-lg-6 mb-3">
                        <input type="text" class="form-control" placeholder="Họ và tên" name="name">
                    </div>
                    <div class="col-lg-6 mb-3">
                        <input name="sdt" placeholder="Số điện thoại" class="form-control">
                    </div>
                </div>
                <div class="row ">
                    <div class="col-lg-12 mb-3">
                        <input name="email" placeholder="Email" type="email" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-lg-12">
                        <input name="subject" placeholder="Tiêu đề" type="text" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-lg-12 mb-2">
                        <textarea name="message" class="form-control" placeholder="Nội dung"></textarea>
                    </div>
                    <div class="col-12 mt-2">
                        <button class="btn btn-warning" type="submit">Gửi</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
