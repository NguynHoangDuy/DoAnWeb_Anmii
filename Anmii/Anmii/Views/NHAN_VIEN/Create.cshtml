@model Anmii.Models.NHAN_VIEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    input, checkbox, select {
        margin-bottom: 5px;
    }
</style>

<h3>THÊM MỚI NHÂN VIÊN</h3>
@using (Html.BeginForm("Create", "NHAN_VIEN", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="align-items:center">
            @Html.LabelFor(model => model.MANV, "Mã nhân viên", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.MANV, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly", @Value = ViewBag.MaNV } })
                @Html.ValidationMessageFor(model => model.MANV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="align-items:center">
            @Html.LabelFor(model => model.HOTENNV, "Họ tên nhân viên", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.HOTENNV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HOTENNV, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group" style="align-items:center">
            @Html.LabelFor(model => model.GIOITINH, "Giới tính", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                <div class="checkbox">
                    Nam @Html.RadioButtonFor(model => model.GIOITINH, "True", new { @checked = "checked" }) &nbsp;
                    Nữ @Html.RadioButtonFor(model => model.GIOITINH, "False")
                    @Html.ValidationMessageFor(model => model.GIOITINH, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>

        <div class="form-group" style="align-items:center">
            @Html.LabelFor(model => model.NGAYSINH, "Ngày sinh", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.NGAYSINH, "Date", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NGAYSINH, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group" style="align-items:center">
            @Html.LabelFor(model => model.SDT, "Số điện thoại", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group" style="align-items:center">
            @Html.LabelFor(model => model.DIACHI, "Địa chỉ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group" style="align-items:center;">
            @Html.LabelFor(model => model.ANHNV, "Ảnh nhân viên", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                <input type="file" style="height:30px;" name="Avatar" accept="image" required />
                @Html.ValidationMessageFor(model => model.ANHNV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="align-items:center">
            @Html.LabelFor(model => model.EMAIL, "Email", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="align-items:center">
            @Html.LabelFor(model => model.MATKHAU, "Mật khẩu", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.PasswordFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group1">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Thêm mới</button>| @Html.ActionLink("Quay lại", "Index")

            </div>
        </div>
    </div>
}