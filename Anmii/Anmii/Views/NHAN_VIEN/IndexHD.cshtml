@model IEnumerable<Anmii.Models.HOA_DON>
@{
    ViewBag.Title = "IndexHD";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "MAHD", rowsPerPage: 5);
}

<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: whitesmoke;
        }

        thead {
            background-color: darkseagreen;
        }

        a {
            color: black
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }

        #gridContent {
            margin-left: 8px;
            margin-right: 8px;
            width: auto;
        }
    </style>
</head>
<body>
    <h1 style="text-align:center">DANH SÁCH HÓA ĐƠN</h1>
    <table class="table">
        @grid.GetHtml(
                tableStyle: "table table-bordered table-hover",
                headerStyle: "header_table",
                footerStyle: "grid-footer",
                fillEmptyRows: true,
                mode: WebGridPagerModes.Numeric,
                alternatingRowStyle: "alternatingRowStyle",
                  columns: new[]{
                    grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
                    grid.Column("MAHD","Mã hóa đơn"),
                    grid.Column("Họ và tên Khách hàng", format: item => item.HOTENKH),
                    grid.Column("SDT","Số điện thoại khách hàng"),
                    grid.Column("DIACHI","Địa chỉ giao"),


grid.Column("Chức năng", format: @<text>


    <a href="@Url.Action("CTHoaDon",
                                new { id = item.MAHD })" class="edit-btn">
        <abbr title="Chi tiết"><img src="~/Images/details.png" width="20" height="20" /></abbr>
    </a>&nbsp;|&nbsp;
    <a href="@Url.Action("DeleteHD",
                                new { id = item.MAHD })" class="edit-btn">
        <abbr title="Xóa"><img src="~/Images/delete.png" width="20" height="20" /></abbr>
    </a>
</text>),

}
)

    </table>
</body>
</html>



