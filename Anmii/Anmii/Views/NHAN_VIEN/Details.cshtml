@model Anmii.Models.NHAN_VIEN

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string gtinh = "";
}

<div style="text-align:center">
    <h4 style="color:red;">THÔNG TIN NHÂN VIÊN</h4>
    <table border="0" cellpadding="0" cellspacing="0" style="font-size:14px; margin-left:auto; margin-right:auto">
        <tr>
            <td>
                <table cellpadding="2" cellspacing="10">
                    <tr>
                        <td rowspan="8"><img src="~/Images/@Html.DisplayFor(model => model.ANHNV)" width="100" height="100" /></td>
                        <td>Mã nhân viên:</td>
                        <td>@Html.DisplayFor(model => model.MANV)</td>
                    </tr>
                    <tr>
                        <td>Họ tên nhân viên:</td>
                        <td>@Html.DisplayFor(model => model.HOTENNV) </td>
                    </tr>

                    <tr>
                        <td>Giới tính:</td>
                        <td>
                            @{if (Model.GIOITINH == true)
                                { gtinh = "Nam"; }
                                else
                                { gtinh = "Nữ"; }
                            }
                            @gtinh
                        </td>
                    </tr>
                    <tr>
                        <td>Ngày sinh:</td>
                        <td>@Html.DisplayFor(model => model.NGAYSINH)</td>
                    </tr>

                    <tr>
                        <td>Số điện thoại:</td>
                        <td>@Html.DisplayFor(model => model.SDT)</td>
                    </tr>
                    <tr>
                        <td>Địa chỉ:</td>
                        <td>@Html.DisplayFor(model => model.DIACHI)</td>
                    </tr>

                    <tr>
                        <td>Email:</td>
                        <td>@Html.DisplayFor(model => model.EMAIL)</td>
                    </tr>

                </table>
            </td>
        </tr>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-left:50px;">

            @Html.ActionLink("Quay lại", "Index")
        </div>
    }

</div>